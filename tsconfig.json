{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"strict": true,
		"jsx": "react",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules"]
}
